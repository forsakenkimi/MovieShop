@model List<ApplicationCore.Models.MovieCardModel>
@{
    ViewData["Title"] = "Favorites Page";
}

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movie in Model)
            {               
                <div class="col-xl-2 col-sm-4 col-md-3 col-6 m-0">
                    <partial name = "_MovieCard" model = "movie"/>
                </div>
            }          
        </div>
    </div>
</div>