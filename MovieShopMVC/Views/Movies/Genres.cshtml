@model ApplicationCore.Models.PagedResultSet<ApplicationCore.Models.MovieCardModel>

@{
    ViewData["Title"] = "Movie Genres";
}

@{
    int prev = Model.PageIndex - 1; 
    int next = Model.PageIndex + 1; 
}

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movie in Model.Data)
            {
                <div class="col-xl-2 col-sm-4 col-md-3 col-6">
                    <partial name = "_MovieCard" model = "movie"/>
                </div>
            }          
        </div>
    </div>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage == true)
        {
             <li class="page-item">
                <a class="page-link" asp-route-pageNumber= "@prev"> Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled ">
                <a class="page-link">Previous</a>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" asp-route-pageNumber="@i">@i</a></li>
            
        }

         @if (Model.HasNextPage == true)
        {
             <li class="page-item">
                <a class="page-link" asp-route-pageNumber="@next">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled ">
                <a class="page-link">Next</a>
            </li>
        }
  </ul>
</nav>