@model ApplicationCore.Models.MovieDetailModel

<style>
    #detailsbackimg{
        background-image: url("@Model.BackdropUrl");
        background-size: auto auto;
    }

    @{
        string[] timeArr = Model.ReleaseDate.ToString().Split("-");
        string[] releaseDateArr =Model.ReleaseDate.ToString().Split(" ");
        decimal boxOffice = Math.Round(Model.Revenue.GetValueOrDefault(),2);
        decimal budget = Math.Round(Model.Budget.GetValueOrDefault(),2);

}
</style>

<div >
    <div class="container-fluid" >
        <div class="row" id="detailsbackimg">
            <div class="col-3 ps-0">
                <img class="img-fluid" src = "@Model.PosterUrl"/>
            </div>

            <div class="col-6" >
                <p class="fs-2 text-white">@Model.Title</p>
                <p class="fs-6 text-secondary">@Model.Tagline</p>
                <span class="fs-6 text-secondary"> @Model.RunTime m | @timeArr[0] </span>  
                @foreach (var genre in Model.Genres)
                {
                    <span class="badge bg-secondary">@genre.Name</span>
                }
                <div>
                    <h3><span class="badge bg-success">@Model.Rating.ToString().Substring(0,3)</span></h3>
                </div>
                <p class="text-white">
                    @Model.Overview
                </p>
            </div>
            <div class="col-3 position-relative pt-5">
                    

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-dark w-100" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>Review
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <!-- form start -->
                            <form>
                              <div class="form-group">
                                <label for="exampleFormControlTextarea1">Please write your review of the movie</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                              </div>
                            </form>
                            <!-- form end -->
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                          </div>
                        </div>
                      </div>
                    </div>


                    <br/>
                    <br/>
                    
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-light w-100" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      BUY $@Model.Price
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            ...
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Purchase</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Button trigger modal -->

            </div>            
        </div>  
        <div>
            <div>
                <div class="row mt-3">
                    <div class= "col-3 ps-0">
                        <h3>MOVIE FACTS</h3>
